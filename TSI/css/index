    "Content-Type": "application/json"
  },
  data: {
    "Email": email
  }
})
;
          
        } catch (err) {
        //  alert(err);
        }
      }
    document.getElementById("form").addEventListener("submit",function(e){
      e.preventDefault();
      saveEmail(e.target.querySelector("input").value);
      e.target.classList.add("w-full")
      e.target.innerHTML = `<b id="cx" class="text-center w-full top-1/2 font-light -translate-y-1/2 absolute">PROCESSING!</b> <button type="submit" class="store-submit-btn relative bg-gradient-to-r from-sky-500 to-blue-600 " style="left:90%; animation: yall 3s linear;">
      
              <i class="ri-indeterminate-circle-line text-2xl animate-spin text-white" ></i>
            </button>`;
            setTimeout(()=>{
              document.querySelector(".store-submit-btn i").classList.remove("ri-indeterminate-circle-line")
              document.querySelector(".store-submit-btn i").classList.remove("animate-spin")
              document.querySelector(".store-submit-btn i").classList.add("ri-check-line")
              document.getElementById("cx").innerHTML = "DONE!"
              
            },3000)
    })
